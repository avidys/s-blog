{
  "name": "@avidys/s-blog",
  "version": "1.2.4",
  "description": "A blog component built with SvelteKit and Markdown",
  "author": "Avidys",
  "license": "GPL-3.0-only",
  "keywords": [
    "svelte",
    "sveltekit",
    "blog",
    "markdown"
  ],
  "homepage": "https://github.com/avidys/s-blog",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run",
    "postinstall": "node ./dist/package-json-update.js",
    "updatenpm": "node ./dist/update-package.js",
    "md2html": "npx tsx \"src/lib/md2html.ts\"",
    "blog_update": "npx tsx \"src/lib/md2html.ts\""
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./markdownMetadataPlugin": {
      "default": "./dist/md2html.js"
    },
    "./md2html": {
      "default": "./dist/md2html.js"
    }
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.18.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.3.2",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.9",
    "svelte": "^5.23.2",
    "svelte-check": "^4.1.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@types/node": "^22.13.10",
    "dotenv": "^16.4.7",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.7"
  },
  "bin": {
    "package-json-update": "./dist/package-json-update.js",
    "blogs-update": "./dist/md2html-cli.js",
    "md2html": "./dist/md2html-cli.js"
  }
}